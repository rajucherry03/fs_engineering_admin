rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin users collection
    match /adminUsers/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
    }

    // Projects collection
    match /projects/{projectId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid));
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'editor'];
      allow delete: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
    }

    // Content collection
    match /content/{contentId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid));
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'editor'];
    }

    // Activity logs collection
    match /activityLogs/{logId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role in ['super_admin', 'admin'];
      allow create: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid));
    }

    // File uploads collection
    match /fileUploads/{fileId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid));
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid));
    }
  }
}
